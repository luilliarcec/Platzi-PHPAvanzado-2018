{% extends 'layout.twig' %}

{% block content %}
    <h1 class="mb-4 col-8">Contact</h1>
    <form action="contact/sent" method="post" class="col-8">
        <div class="alert alert-{% if responseMessage != null %}danger{% endif %}"
                {% if responseMessage == null %} hidden {% endif %}>
            {{ responseMessage }}
        </div>

        <div class="form-group">
            <label for="input-name">Nombre:</label>
            <input type="text" class="form-control"
                   id="input-name" name="name" placeholder="Nombre">
        </div>

        <div class="form-group">
            <label for="input-email">Email:</label>
            <input type="email" class="form-control"
                   id="input-email" name="email" placeholder="tucorreo@email.com">
        </div>

        <div class="form-group">
            <label for="input-mensaje">Mensaje:</label>
            <textarea class="form-control" id="input-mensaje" rows="4" name="message"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Contact me!</button>
    </form>
{% endblock %}