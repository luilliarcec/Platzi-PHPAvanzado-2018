{% extends 'layout.twig' %}

{% block content %}
    <h1 class="mb-4 col-8">Add User</h1>
    <form action="" method="post" class="col-8">
        <div class="alert alert-{% if errors == null %}success{% else %}danger{% endif %}"
                {% if errors == null and message == null %} hidden {% endif %}>
            {% if errors != null %}
                <ul>
                    {% for error in errors %}
                        {% if error != null %}
                            <li>{{ error }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            {% else %}
                {{ message }}
            {% endif %}
        </div>

        <div class="form-group">
            <label for="input-email">Email:</label>
            <input type="email" class="form-control {% if errors.email != null %}is-invalid{% endif %}"
                   id="input-email" name="email" placeholder="tucorreo@email.com">
            {% if errors.email != null %}
                <div class="invalid-feedback">
                    {{ errors.email }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="input-password">Password:</label>
            <input type="password" class="form-control {% if errors.length != null %}is-invalid{% endif %}"
                   id="input-password" name="password" placeholder="ContraseÃ±a">
            {% if errors.length != null %}
                <div class="invalid-feedback">
                    {{ errors.length }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
{% endblock %}